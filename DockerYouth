FROM node:14 as app
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app
COPY --from=frontend /usr/src/app/node_modules /usr/src/app/node_modules

#RUN cd /usr/src/app && ln -s /tmp/node_modules

# Bundle app source
COPY . /usr/src/app
RUN cd /usr/src/app && rm -rf youth/public
RUN cd /usr/src/app && cp public -R youth/public
RUN cd /usr/src/app && yarn build:youth-prod
EXPOSE 3002
CMD ["yarn", "start:youth"]
