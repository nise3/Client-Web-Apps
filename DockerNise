FROM node:14 as app
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app
COPY --from=frontend /usr/src/app/node_modules /usr/src/app/node_modules

#RUN cd /usr/src/app && ln -s /tmp/node_modules

# Bundle app source
COPY . /usr/src/app
RUN cd /usr/src/app && rm -rf nise/public
RUN cd /usr/src/app && cp public -R nise/public
RUN cd /usr/src/app && yarn build:nise-prod
EXPOSE 3001
CMD ["yarn", "start:nise"]
